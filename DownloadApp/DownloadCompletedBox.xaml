        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Download Completed" Height="150" Width="400"
        ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid>
        <Button x:Name="CloseButton" Content="Close" HorizontalAlignment="Left" Margin="159,77,0,0" VerticalAlignment="Top" Width="75" Click="CloseButton_Click"/>
        <Button x:Name="OpenFileLocButton" Content="Open File Location" HorizontalAlignment="Left" Margin="41,28,0,0" VerticalAlignment="Top" Width="140" Click="OpenFileLocButton_Click"/>
        <Button x:Name="PlayButton" Content="Play in WMP" HorizontalAlignment="Left" Margin="221,28,0,0" VerticalAlignment="Top" Width="140" RenderTransformOrigin="0.5,0.5" Click="PlayButton_Click"/>

    </Grid>
</Window>
